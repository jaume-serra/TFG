
<%- include('../partials/head') %>

<link rel='stylesheet' type="text/css" href="/public/css/create_place.css">

<script type="text/javascript" src="/public/js/create_place.js" defer></script>


<body>
      <!-- Menu navegacio -->
      <%- include('../partials/navbar') %>
      <div  id="change-bg" class="change-bg">

        <div class="mx-auto max-w-7xl">
            <form data-multi-step class="multi-step-form h-80 border-4  max-w-md p-10 overflow-x-hidden border-cyan-300  " id="multiStepForm">

                <div class="card" data-step>
                  <h3 class="">This is step 1</h3>
                  <div class="flex-col">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email">
                  </div>
                  <div class="flex-col">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password">
                  </div>
                  <button type="button" data-next>Next</button>
                </div>
    
                <div class="card" data-step>
                  <h3 class="">This is step 2</h3>
    
                  <div class="form-group flex-col">
                    <label for="address">Address</label>
                    <input type="text" name="address" id="address">
                  </div>
    
                  <div class="flex-col">
                    <label for="city">City</label>
                    <input type="text" name="city" id="city">
                  </div>
                  <div class="flex-col">
                    <label for="zipcode">Zip Code</label>
                    <input type="text" name="zipcode" id="zipcode">
                  </div>
                  <button type="button" data-previous>Previous</button>
                  <button type="button" data-next>Next</button>
                </div>
    
                <div class="card" data-step>
                  <h3 class="">This is step 3</h3>
                  <div class="flex-col">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" id="firstName">
                  </div>
                  <div class="flex-col">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName">
                  </div>
                  <button type="button" data-previous>Previous</button>
                  <button type="submit">Submit</button>
                </div>
    
              </form>
    
        </div>
        <!--Inici Form-->


          <%- include('../partials/footer') %>
        </div>


</body>
</html>